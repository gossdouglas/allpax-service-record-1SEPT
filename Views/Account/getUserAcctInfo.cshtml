                    <div class="col-1 password_div" id="password_div" contenteditable="false" style="">@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</div>
                    <div class="col-1 confirmPassword_div" id="confirmPassword_div" contenteditable="false" style="">@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })</div>
