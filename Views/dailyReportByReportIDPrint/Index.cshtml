    <div class="container printable" id="contnr_team">
        <div class="row">
            <div class="col-3" style="padding:5px">
                <span><strong>Daily Log</strong></span>
                <span><strong>Record No</strong></span>
                <span id="txt_dailyReportID" value="@Model.First().dailyReportID">@Model.First().dailyReportID</span>
            </div>
        </div>
        <div class="row">
            <div class="col-3" style="padding:5px">
                <span><strong>Date: </strong></span> <span>@Model.First().date</span>
                <span><strong>Customer: </strong></span>  <span>@Model.First().customerName</span>
                <span><strong>Customer Code: </strong></span>  <span>@Model.First().customerCode</span>
            </div>
        </div>
        <div class="row">
            <div class="col-3" style="padding:5px">
                <span><strong>Customer Contact: </strong></span>  <span>@Model.First().customerContact</span>
                <span><strong>Location: </strong></span>  <span>@Model.First().address</span>
            </div>
        </div>
        <div class="row">
            <div class="col-3" style="padding:5px">
                <span><strong>Correspondents: </strong></span>
                @foreach (var item in Model)
                {

                    //BEGIN TEMPORARY LOOP VARIABLES
                    List<string> temp_jobCorrespondentName = item.jobCorrespondentName;
                    //END TEMPORARY LOOP VARIABLES

                    for (var i = 0; i < (temp_jobCorrespondentName.Count); i++)
                    {
                        <span>@temp_jobCorrespondentName[@i]</span>
                    }
                }
            </div>
        </div>
        <div class="row">
            <div class="col-3" style="padding:5px">
                <span><strong>Equipment: </strong></span>  <span>@Model.First().equipment</span>
            </div>
        </div>
        <div class="row">
            <div class="col-3" style="padding:5px">
                <span><strong>Start Time: </strong></span>  <span>@Model.First().startTime</span>
                <span><strong>End Time: </strong></span>  <span>@Model.First().endTime</span>
                <span><strong>Lunch (hr): </strong></span>  <span>@Model.First().lunchHours</span>
            </div>
        </div>
    </div>
<hr style="margin:1px; opacity:0" />
