<div class="container printable" id="contnr_team">
    <div class="row">
        <div class="col-2" style="padding:5px">
            <span><strong>Allpax Team:</strong></span>
            @foreach (var item in Model)
            {

                //BEGIN TEMPORARY LOOP VARIABLES
                List<string> temp_Names = item.names;
                List<string> temp_shortNames = item.shortNames;
                //END TEMPORARY LOOP VARIABLES

                for (var i = 0; i < (temp_Names.Count); i++)
                {
                <span>@temp_Names[@i]|@temp_shortNames[@i]</span>
                }
            }
        </div>
    </div>
</div>
