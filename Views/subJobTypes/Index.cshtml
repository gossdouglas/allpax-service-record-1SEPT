@model IEnumerable<allpax_service_record.Models.tbl_subJobTypes>
@{
    ViewBag.Title = "Sub-job Types";
}


<head>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/underscore@1.11.0/underscore-min.js"></script>

    <style>

        /*AN INVISIBLE HORIZONTAL SPACE*/
        .sectionSeparator {
            margin: 1px;
            opacity: 0;
        }

        table {
            table-layout: auto !important;
        }

        thead th, tbody td, tfoot td, tfoot th {
            /*width: auto !important;*/
            white-space: nowrap;
        }

        /*BEGIN CHANGE LAYOUT FOR MOBILE*/
        @@media only screen and (max-width: 760px), (min-device-width: 768px) and (max-device-width: 1024px) {
            /* Force table to not be like tables anymore */
            table, thead, tbody, th, td, tr {
                display: block;
            }
                /* Hide table headers (but not display: none;, for accessibility) */
                thead tr {
                    position: absolute;
                    top: -9999px;
                    left: -9999px;
                }

            tr {
                border: 1px solid #ccc;
            }

            td {
                /* Behave  like a "row" */
                border: none;
                border-bottom: 1px solid #eee;
                position: relative;
                padding-left: 50%;
            }

                td:before {
                    /* Now like a table header */
                    position: absolute;
                    /* Top/left values mimic padding */
                    top: 6px;
                    left: 6px;
                    width: 45%;
                    padding-right: 10px;
                    white-space: nowrap;
                }
            /*END CHANGE LAYOUT FOR MOBILE*/
        }
    </style>
    <script>
        $(document).ready(function () {//begin document read jquery statements

            $(".subJobTypeNewForm.btn_save").click(function () {

                //if (fn_rowFilled($(this))) {

                    var modal = $(this).parent().parent();
                    var temp_description = modal.find('.description').val();

                    var data = {
                        description: temp_description
                    };

                    fn_showSpinner();
                //console.log(data);

                    $.ajax({
                        url: '/SubJobTypes/AddSubJobType',
                        method: 'post',
                        contentType: 'application/json',
                        dataType: 'json',
                        data: JSON.stringify(data),
                        traditional: true,
                        success: function (response) {
                            window.location.href = response;
                        },
                        error: function (response) {
                            console.log("an error!");
                            $(response).each(function (index, item) {
                                console.log(item.name)
                            });
                        }
                    });
                //}
            });

            $('#subJobTypeEditForm').on('show.bs.modal', function (event) {

                var button = $(event.relatedTarget) // Button that triggered the modal
                var temp_description = button.data('description') // Extract info from data-* attributes
                var temp_subJobTypeID = button.data('sub-job-type-id') // Extract info from data-* attributes

                var modal = $(this)
                modal.find('.modal-title').text('Sub-job Edit Form');
                modal.find('.sub-job-type-id').val(temp_subJobTypeID);
                modal.find('.description').val(temp_description);
            })

            $(".subJobTypeEditForm.btn_save").click(function () {

                console.clear();

                //if (fn_rowFilled($(this))) {

                    var modal = $(this).parent().parent();
                    var temp_subJobID = modal.find('.sub-job-type-id').val()
                    var temp_description = modal.find('.description').val()

                    var data = {                        
                        description: temp_description,
                        subJobID: temp_subJobID
                    };

                    fn_showSpinner();
                //console.log(data);

                    $.ajax({
                        url: '/SubJobTypes/UpdateSubJobType',
                        method: 'post',
                        contentType: 'application/json',
                        dataType: 'json',
                        data: JSON.stringify(data),
                        traditional: true,
                        success: function (response) {
                            window.location.href = response;
                        },
                        error: function (response) {
                            console.log("an error!");
                            $(response).each(function (index, item) {
                                console.log(item.name)
                            });
                        }
                    });
                //}
            });

            $(".subJobTypeEditForm.btn_delete").click(function () {

                var modal = $(this).parent().parent().parent();
                var temp_subJobTypeID = modal.find('.sub-job-type-id').val();
                var temp_resourceType = modal.find('.sub-job-type').val();
                var temp_description = modal.find('.description').val();
                var temp_rate = modal.find('.rate').val();

                var data = {
                    subJobTypeID: temp_subJobTypeID,
                };

                $.confirm({
                    title: 'Delete Resource ' + temp_resourceType + ': ' + temp_description + '?',
                    content: '',
                    buttons: {
                        confirm: function () {
                            fn_showSpinner();
                            $.ajax({
                                url: '/ResourceTypes/DeleteResourceType',
                                method: 'post',
                                contentType: 'application/json',
                                dataType: 'json',
                                data: JSON.stringify(data),
                                traditional: true,
                                success: function (response) {
                                    window.location.href = response;
                                }
                            });
                        },
                        cancel: function () {
                        }
                    }
                });
            });

            $(".returnedRecords .Btn_delete").click(function () {

                var currentRow = $(this).parent().parent();
                var temp_subJobTypeID = currentRow.find('.subJobTypeID_div').html();
                var temp_description = currentRow.find('.description_div').html();

                var data = {
                    subJobID: temp_subJobTypeID,
                };

                console.log(data);

                $.confirm({
                    title: "Delete Sub-job Type: " + temp_description + "?",
                    content: '',
                    buttons: {
                        confirm: function () {
                            //fn_showSpinner();
                            $.ajax({
                                url: '/SubJobTypes/DeleteSubJobType',
                                method: 'post',
                                contentType: 'application/json',
                                dataType: 'json',
                                data: JSON.stringify(data),
                                traditional: true,
                                success: function (response) {
                                    window.location.href = response;
                                }
                            });
                        },
                        cancel: function () {
                        }
                    }
                });
            });

            function fn_showSpinner() {
                $.LoadingOverlay("show", {
                    image: "",
                    fontawesome: "fa fa-cog fa-spin"
                });
            }

            //BEGIN VALIDATION BEFORE SAVING SECTION

            function fn_rowFilled(button) {
                var currentRow = button.parent().parent();
                var rowFilled = true;
                var temp_resourceType = currentRow.find(".sub-job-type").val();
                var temp_description = currentRow.find(".description").val();
                var temp_rate = currentRow.find(".rate").val();

                var temp_resourceTypeMatch = temp_resourceType.match(/(.*[A-Z]){2,}/);//maches the form two or more letters
                var temp_descriptionMatch = temp_description.match(/(.*[A-Z]){3,}/);//maches the form three or more letters
                var temp_rateMatch = temp_rate.match(/^(\d{1,3})\.(00)$/);//maches the form 125.00

                if (!temp_resourceTypeMatch) {
                    $.alert({
                        title: 'Error!',
                        content: 'Resource type must not be empty and begin with at least 3 capital letters.',
                    });
                    rowFilled = false;
                    return rowFilled;
                }

                if (!temp_descriptionMatch) {
                    $.alert({
                        title: 'Error!',
                        content: 'Description must not be empty and contain at least 3 capital letters.',
                    });
                    rowFilled = false;
                    return rowFilled;
                }

                if (!temp_rateMatch) {
                    $.alert({
                        title: 'Error!',
                        content: 'Charge rate must not be empty and be of the form ###.##.',
                    });
                    rowFilled = false;
                    return rowFilled;
                }
                return rowFilled;
            }

            //END VALIDATION BEFORE SAVING SECTION

        });//end document read jquery statements
    </script>
</head>

@*BEGIN RESOURCE SECTION*@
<hr class="sectionSeparator">
<div class="col-12" style="padding:0px;">
    <span><strong>Add a New Sub-job Type</strong></span>
    <span>
        <button class="btn btn-light btn-sm" data-toggle="modal" data-target="#subJobTypeNewForm">
            <i class="far fa-plus-square fa-2x" style="color:black;"></i>
        </button>
    </span>
</div>
<hr class="sectionSeparator">
<div class="container-md" id="subJobTypeData_container" style="overflow:auto; height: calc(100vh - 150px)">
    <div class="table-responsive">
        <table id="dt_subJobTypeData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th class="">
                        <span>Sub-job Description</span>
                    </th>
                    <th class="">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @*BEGIN RETURNED RECORDS*@
                @foreach (var item in Model)
                {
                    //BEGIN TEMPORARY LOOP VARIABLES
                    byte temp_subJobTypeID = item.subJobID;
                    string temp_description = item.description;
                    //END TEMPORARY LOOP VARIABLES

                    @*<hr class="sectionSeparator">*@
                    <tr class="returnedRecords" id="" style="">
                        <td class="subJobTypeID_div" hidden>@temp_subJobTypeID</td>
                        <td class="description_div">@temp_description</td>
                    <td class="button_div" style="padding:0px;">
                        <button class="btn btn-light btn-sm Btn_edit" data-toggle="modal" data-target="#subJobTypeEditForm" data-sub-job-type-id="@temp_subJobTypeID"
                                data-description="@temp_description">
                            <i class="far fa-edit fa-2x" style="color:black;">
                            </i>
                        </button>
                        <button class="btn btn-light btn-sm Btn_delete"><i class="far fa-minus-square fa-2x" style="color: black;"></i></button>
                    </td>
                    </tr>
                }
                @*END RETURNED RECORDS*@
            </tbody>
        </table>
    </div>
</div>
@*BEGIN EDIT RESOURCE MODAL TEMPLATE*@
<div class="modal fade" id="subJobTypeEditForm" tabindex="-1" role="dialog" aria-labelledby="subJobTypeEditForm" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="float-left">
                    <h5 class="modal-title" id="subJobTypeEditForm">Edit Resource</h5>
                </div>
                <div class="float-none">
                    <button type="button" class="btn btn-light btn-sm subJobTypeEditForm" data-toggle="modal" data-target="#resourceNewForm"><i class="far fa-plus-square fa-2x" style="color:black;"></i></button>
                    <button type="button" class="btn btn-light btn-sm subJobTypeEditForm btn_delete"><i class="far fa-minus-square fa-2x" style="color: black;"></i></button>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <form>
                    <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <label for="description" class="col-form-label">Description:</label>
                                <input type="text" class="form-control description">
                                <label for="sub-job-type-id" class="col-form-label">Resource Type ID:</label>
                                <input type="text" class="form-control sub-job-type-id">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn subJobTypeEditForm btn_save" value="">Save</button>
                <button type="button" class="btn btn_cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@*END EDIT RESOURCE MODAL TEMPLATE*@

@*BEGIN NEW RESOURCE MODAL TEMPLATE*@
<div class="modal fade" id="subJobTypeNewForm" tabindex="-1" role="dialog" aria-labelledby="subJobTypeNewForm" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="subJobTypeNewForm">Add Sub-job Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <label for="description" class="col-form-label">Sub-job Type Description:</label>
                                <input type="text" class="form-control description" maxlength="25">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn subJobTypeNewForm btn_save" value="">Save</button>
                <button type="button" class="btn btn_cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
@*END NEW RESOURCE MODAL TEMPLATE*@
@*END RESOURCE SECTION*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
