@*BEGIN EDIT SUB-JOB TYPE MODAL TEMPLATE*@
<div class="modal fade" id="subJobTypeEditForm" tabindex="-1" role="dialog" aria-labelledby="subJobTypeEditForm" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="float-left">
                    <h5 class="modal-title" id="subJobTypeEditForm">Edit Sub-job Type</h5>
                </div>
                <div class="float-none">
                    <button type="button" class="btn btn-light btn-sm subJobTypeEditForm" data-toggle="modal" data-target="#subJobTypeNewForm"><i class="far fa-plus-square fa-2x" style="color:black;"></i></button>
                    <button type="button" class="btn btn-light btn-sm subJobTypeEditForm btn_delete"><i class="far fa-minus-square fa-2x" style="color: black;"></i></button>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <form>
                    <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
