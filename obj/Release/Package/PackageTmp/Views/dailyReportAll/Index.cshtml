</head>

<div class="container-fluid">
    <div class="row">
        <div class="md-col-1" style="padding:5px">
            <strong>Start Date:</strong>
        </div>
        <div class="md-col-2" style="padding:5px">
            <input type="date" class="form-control form-control-sm" id="startDateInput" placeholder="" value="">
        </div>
        <div class="md-col-1" style="padding:5px">
            <strong>End Date:</strong>
        </div>
        <div class="md-col-2" style="padding:5px">
            <input type="date" class="form-control form-control-sm" id="endDateInput" placeholder="" value="">
        </div>
        <div class="md-col-1" style="padding:5px">
            <button class="btn btn-primary btn-sm" id="filterDateBtn" style=" background-color: darkorange">Filter</button>
        </div>
        <div class="md-col-1" style="padding:5px">
            <button class="btn btn-primary btn-sm" id="newDailyRptBtn" style=" background-color: darkturquoise" onclick="window.location.href='/dailyReport'">New Daily Report</button>
        </div>
    </div>
    <div class="col-md-12" style="border:none">
        <table id="dt_dailyRptAll" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="th-sm">
                        Report ID
                    </th>
                    <th class="th-sm">
                        Active
                    </th>
                    <th class="th-sm">
                        Date
                    </th>
                    <th class="th-sm">
                        Job
                    </th>
                    <th class="th-sm">
                        Sub Job
                    </th>
                    <th class="th-sm">
                        Customer
                    </th>
                    <th class="th-sm">
                        Location
                    </th>
                    <th class="th-sm">
                        Team
                    </th>
                    <th class="th-sm">
                        Work Description
                    </th>
                    <th class="th-sm" hidden>
                        Customer Code
                    </th>
                    <th class="th-sm" hidden>
                        Customer Contact
                    </th>
                    <th class="th-sm">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    //BEGIN TEMPORARY LOOP VARIABLES
                    string temp_date = String.Format("{0:yyyy-MM-dd}", item.date);
                    List<string> temp_team = item.team;
                    List<string> temp_workDescription = item.workDescription;
                    Boolean temp_active = item.active;
                    //END TEMPORARY LOOP VARIABLES

                    <tr class="record" id=@Html.DisplayFor(modelItem => item.dailyReportID)>
                        <td id="record_item0" value=@Html.DisplayFor(modelItem => item.dailyReportID)>@Html.DisplayFor(modelItem => item.dailyReportID)</td>
                        <td id="record_item1" style="text-align:center">
                            @if (item.active == true)
                            {
                                <i class="fas fa-check-circle fa-2x" style="color:lawngreen;"></i>
                            }
                            else
                            {
                                <i class="fas fa-stop-circle fa-2x" style="color:red" ;></i>
                            }
                        <span class="" id="" style="" hidden>@temp_active</span>
                        </td>
                        <td id="record_item2" value=@temp_date>@temp_date</td>
                        <td id="record_item3" value=@Html.DisplayFor(modelItem => item.jobID)>@Html.DisplayFor(modelItem => item.jobID)</td>
                        <td id="record_item4" value=@Html.DisplayFor(modelItem => item.subJobID)>@Html.DisplayFor(modelItem => item.description)</td>
                        <td id="record_item5" value=@Html.DisplayFor(modelItem => item.customerName)>@Html.DisplayFor(modelItem => item.customerName)</td>
                        <td id="record_item6" value=@Html.DisplayFor(modelItem => item.address)>@Html.DisplayFor(modelItem => item.address)</td>
                        <td id="record_item7" value=>
                            @for (var i = 0; i < (temp_team.Count); i++)
                            {
                                <span class="" id="" style="">@temp_team[@i]|</span>
                            }
                        </td>
                        <td id="record_item8" value= style="overflow:hidden; white-space:nowrap">
                            @for (var i = 0; i < (temp_workDescription.Count); i++)
                            {
                                @temp_workDescription[@i]
                            }                        
                        </td>
                        <td id="record_item9" value=@Html.DisplayFor(modelItem => item.customercode) hidden>@Html.DisplayFor(modelItem => item.customercode)</td>
                        <td id="record_item10" value=@Html.DisplayFor(modelItem => item.customerContact) hidden>@Html.DisplayFor(modelItem => item.customerContact)</td>
                        <td>
                            <button class="btn btn-primary btn-sm editButton" style=" background-color: darkorange">Edit</button>
                            <button class="btn btn-primary btn-sm deleteButton" style=" background-color: darkgoldenrod">Delete</button>
                            <button class="btn btn-primary btn-sm copyButton" style=" background-color: darkturquoise">Copy</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


